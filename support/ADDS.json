{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "domainName": {
            "type": "string"
        },
        "notificationSettings": {
            "type": "object",
            "defaultValue": {
                "notifyGlobalAdmins": "Enabled",
                "notifyDcAdmins": "Enabled",
                "additionalRecipients": []
            }
        },
        "subnetName": {
            "type": "string",
            "defaultValue": "subnetA"
        },
        "vnetName": {
            "type": "string"
        },
        "subnetAddressPrefix": {
            "type": "string",
            "defaultValue": "10.0.1.0/24"
        },
        "nsgName": {
            "type": "string",
            "defaultValue": "[concat(uniqueString(resourceGroup().id, deployment().name),'_bnsg')]"
        }
    },
    "resources": [
        {
            "apiVersion": "2017-06-01",
            "type": "Microsoft.AAD/DomainServices",
            "name": "[parameters('domainName')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Resources/deployments/', parameters('vnetName'), '.', parameters('subnetName'))]"
            ],
            "properties": {
                "domainName": "[parameters('domainName')]",
                "subnetId": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', resourceGroup().name, '/providers/Microsoft.Network/virtualNetworks/', parameters('vnetName'), '/subnets/', parameters('subnetName'))]",
                "filteredSync": "FullySynced",
                "domainConfigurationType": "FullySynced",
                "notificationSettings": "[parameters('notificationSettings')]",
                "sku": "Standard"
            }
        },
        {
            "apiVersion": "2019-05-01",
            "name": "[parameters('nsgName')]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "resources": [
                        {
                            "type": "Microsoft.Network/NetworkSecurityGroups",
                            "name": "[parameters('nsgName')]",
                            "location": "[resourceGroup().location]",
                            "properties": {
                                "securityRules": [
                                    {
                                        "name": "AllowSyncWithAzureAD",
                                        "properties": {
                                            "access": "Allow",
                                            "priority": 101,
                                            "direction": "Inbound",
                                            "protocol": "Tcp",
                                            "sourceAddressPrefix": "AzureActiveDirectoryDomainServices",
                                            "sourcePortRange": "*",
                                            "destinationAddressPrefix": "*",
                                            "destinationPortRange": "443"
                                        }
                                    },
                                    {
                                        "name": "AllowPSRemoting",
                                        "properties": {
                                            "access": "Allow",
                                            "priority": 301,
                                            "direction": "Inbound",
                                            "protocol": "Tcp",
                                            "sourceAddressPrefix": "AzureActiveDirectoryDomainServices",
                                            "sourcePortRange": "*",
                                            "destinationAddressPrefix": "*",
                                            "destinationPortRange": "5986"
                                        }
                                    },
                                    {
                                        "name": "AllowRD",
                                        "properties": {
                                            "access": "Allow",
                                            "priority": 201,
                                            "direction": "Inbound",
                                            "protocol": "Tcp",
                                            "sourceAddressPrefix": "CorpNetSaw",
                                            "sourcePortRange": "*",
                                            "destinationAddressPrefix": "*",
                                            "destinationPortRange": "3389"
                                        }
                                    }
                                ]
                            },
                            "apiVersion": "2019-09-01"
                        }
                    ]
                },
                "parameters": {}
            }
        },
        {
            "apiVersion": "2019-05-01",
            "name": "[concat(parameters('vnetName'), '.', parameters('subnetName'))]",
            "type": "Microsoft.Resources/deployments",
            "resourceGroup": "[resourceGroup().name]",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "resources": [
                        {
                            "type": "Microsoft.Network/virtualNetworks/subnets",
                            "apiVersion": "2019-09-01",
                            "name": "[concat(parameters('vnetName'), '/', parameters('subnetName'))]",
                            "dependsOn": [],
                            "properties": {
                                "addressPrefix": "[parameters('subnetAddressPrefix')]",
                                "networkSecurityGroup": {
                                    "id": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', resourceGroup().name, '/providers/Microsoft.Network/NetworkSecurityGroups/', parameters('nsgName'))]"
                                }
                            }
                        }
                    ]
                },
                "parameters": {}
            },
            "dependsOn": [
                "[concat('Microsoft.Resources/deployments/', parameters('nsgName'))]"
            ]
        }
    ],
    "outputs": {}
}